<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <!-- Post Service -->

    <route url="/V1/blog/post/:post_id" method="GET">
        <service class="Rrosello\Blog\Api\PostRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/blog/post/search" method="GET">
        <service class="Rrosello\Blog\Api\PostRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/blog/post/save" method="POST">
        <service class="Rrosello\Blog\Api\PostRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>