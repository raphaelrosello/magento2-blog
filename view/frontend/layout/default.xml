<?xml version="1.0"?>

<page layout="2columns-right" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="blog">
                <arguments>
                    <argument name="label" xsi:type="string">Blog</argument>
                    <argument name="path" xsi:type="string">blog</argument>
                </arguments>
            </block>
        </referenceBlock>

        <referenceContainer name="sidebar.additional">
            <referenceBlock name="catalog.compare.sidebar" remove="true"/>
            <referenceBlock name="wishlist_sidebar" remove="true"/>
            <referenceBlock name="multiple-wishlist_sidebar" remove="true" />
        </referenceContainer>
    </body>
</page>